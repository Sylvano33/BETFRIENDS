
<div class="login-page">
  <div class="container">


  <div class="home-box">
    <h2>Log in</h2>
    <div class="pink-stripe"></div>
  </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: 'BGdu33@msn.com' %>
        <%= f.input :password, required: false, placeholder: '123soleil' %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-warning btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
