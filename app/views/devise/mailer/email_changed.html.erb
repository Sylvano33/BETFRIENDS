<div class="login-page">
  <div class="container">
    <div class="home-box">
      <h2><%= t('.greeting', recipient: @email) %></h2>
      <div class="pink-stripe"></div>
    </div>


<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t('.message', email: @resource.unconfirmed_email) %></p>
<% else %>
  <p><%= t('.message', email: @resource.email) %></p>
<% end %>

  </div>
</div>
