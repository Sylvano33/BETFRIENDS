<div class="login-page">
  <div class="container">
    <div class="home-box">
      <h2>Sign up</h2>
      <div class="pink-stripe"></div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,  :required => false, autofocus: true, placeholder: 'BGdu33@msn.com' %>
        <%= f.input :username,  :required => false, placeholder: 'Le boss du BET' %>
        <%= f.input :password,  :required => false, placeholder: '123soleil' %>

        <%= f.input :password_confirmation,  :required => false, placeholder: "le mÃªme qu'au dessus STP" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-warning btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
