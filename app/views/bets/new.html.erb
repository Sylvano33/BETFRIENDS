

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://acedixon.com/wp-content/uploads/2017/03/a-10.jpg');">
  <div class="banner-content">
    <h3>Décris ton pari</h3>
    <h7>*champs obligatoires</h7>
      <%= simple_form_for [@bet] do |f| %>
        <h5><%= f.input :description, placeholder: "Décris le pari ici" %></h5>
        <h5><%= f.input :bet_value, placeholder: "Une bière? Un resto? 10 balles?" %></h5>
        <h5><%= f.input :hour_countdown, as: :integer, placeholder: "48h pour accepter le pari"%></h5>

        <h5><%= f.input :end_date_of_bet, placeholder: "Date de fin du pari", html5: true %></h5>

        <h5><%= f.input :receiver_email, placeholder: "Email de ton pote" %></h5>

        <%= f.button :submit, class: "btn btn-warning btn-lg banner-button" %>
      <% end %>
  </div>
</div>
