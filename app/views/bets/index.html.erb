

<div class="index-page">

  <div class="row"></div>

    <% @bets.each do |bet| %>
    <!-- à enlever -->
    <p> Ce bet a été créé par <strong> <%= bet.user.username %> </strong></p>
    <!-- à enlever -->


<!-- carré de couleur -->
      <div class="col-xs-12">
        <div class="bet">
          <p><%= bet.description %></p>
          <div class="container">
            <div class="pink-stripe-lg"></div>

            <div class="box-hole"></div>
            <div class="box-hole2"></div>

            <% if bet.pending? %>
              <div class="grey-cube"></div>
            <% end %>

            <% if bet.accepted? %>
              <div class="pink-cube"></div>
            <% end %>

            <% if bet.won? %>
              <% if current_user.bet_creator?(bet) %>
                <div class="green-cube"></div>
              <% else %>
                <div class="red-cube"></div>
              <% end  %>
            <% end %>

            <% if bet.lost? %>
              <% if current_user.bet_creator?(bet) %>
                <div class="red-cube"></div>
              <% else %>
                <div class="green-cube"></div>
              <% end  %>
            <% end %>

       <!--  description -->
            <div class="in-bet">
              <% if current_user.bet_creator?(bet) %>
                <p><strong>Adversaire : </strong><%= bet.receiver_email %></p>
              <% else %>
                <p><strong>Adversaire : </strong><%= bet.user.username %></p>
              <% end  %>
              <p><strong>Mise : </strong><%= bet.bet_value %></p>
              <p><strong>Fin : </strong><%= bet.end_date_of_bet %></p>
              <%= link_to "Voir le pari", bet_url(bet), class: "btn btn-warning btn-lg banner-button" %>
            </div>

            <a class="index-link" href="#" ></a>
          </div>
        </div>
      </div>
    <% end %>

    <div class="white-cube"></div>

  </div>

  <div class="foot">
    <div class="in-foot"><em>Victoires : </em> <strong><%= current_user.won_bets_count %></strong></div>
    <div class="in-foot"><em>Défaites : </em> <strong><%= current_user.lost_bets_count %></strong></div>
  </div>
</div>
